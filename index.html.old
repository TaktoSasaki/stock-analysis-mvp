            try {
                const url = `${API_ENDPOINT}?action=get_stock&ticker=${ticker}&interval=${interval}`;
                const response = await fetch(url);

                if (!response.ok) {
                    throw new Error(`API Error: ${response.status}`);
                }

                return await response.json();
            } catch (e) {
                console.error('Failed to load stock data:', e);
                return null;
            }
        }

        // éŠ˜æŸ„ãƒªã‚¹ãƒˆæç”»
        function renderStockList(stocks) {
            const list = document.getElementById('stockList');
            const tickers = Object.keys(watchlist);
            
            if (tickers.length === 0) {
                list.innerHTML = `
                    <li class="empty-list">
                        <div class="empty-list-icon">ğŸ“Š</div>
                        <div class="empty-list-text">
                            éŠ˜æŸ„ã‚’æ¤œç´¢ã—ã¦<br>è¿½åŠ ã—ã¦ãã ã•ã„
                        </div>
                    </li>
                `;
                return;
            }
            
            list.innerHTML = '';
            
            tickers.forEach(ticker => {
                const stock = watchlist[ticker];
                const li = document.createElement('li');
                li.className = `stock-item${selectedTicker === ticker ? ' active' : ''}`;
                li.setAttribute('data-ticker', ticker);
                
                li.innerHTML = `
                    <div class="stock-item-info">
                        <div class="stock-item-name">${stock.name}</div>
                        <div class="stock-item-ticker">${ticker}</div>
                    </div>
                    <button class="stock-item-remove" title="å‰Šé™¤">âœ•</button>
                `;
                
                li.querySelector('.stock-item-info').onclick = () => selectStock(ticker);
                li.querySelector('.stock-item-remove').onclick = (e) => removeFromWatchlist(ticker, e);
                
                list.appendChild(li);
            });
        }

        // éŠ˜æŸ„é¸æŠæ™‚ã®å‡¦ç†
        async function selectStock(ticker) {
            currentTicker = ticker;

            // ãƒªã‚¹ãƒˆã®é¸æŠçŠ¶æ…‹æ›´æ–°
            document.querySelectorAll('.stock-item').forEach(el => el.classList.remove('active'));

            // data-ticker å±æ€§ã‚’é¸æŠ
            const targetItem = document.querySelector(`.stock-item[data-ticker="${ticker}"]`);
            if (targetItem) targetItem.classList.add('active');

            // ç¾åœ¨ã®æ™‚é–“è¶³ã§ãƒ‡ãƒ¼ã‚¿ã‚’å–å¾—
            const stockData = await loadStockData(ticker, currentInterval);

            if (!stockData || !stockData.data) {
                console.error('Failed to load stock data');
                return;
            }

            const data = stockData.data;

            // ãƒãƒ£ãƒ¼ãƒˆæ›´æ–°
            lineSeries.setData(data);

            // è‰²ã®è¨­å®š
            const isPositive = stockData.year_change_pct >= 0;
            const color = isPositive ? '#26a69a' : '#ef5350';
            lineSeries.applyOptions({ color: color });

            chart.timeScale().fitContent();

            // çµ±è¨ˆãƒ‘ãƒãƒ«æ›´æ–°
            updateStats(stockData, isPositive);
        }

        // çµ±è¨ˆæ›´æ–°
        function updateStats(stock) {
            document.getElementById('statsPanel').style.display = 'grid';
            
            const isPositive = stock.year_change_pct >= 0;
            
            document.getElementById('currentPrice').textContent = formatPrice(stock.current_price);
            document.getElementById('yearHigh').textContent = formatPrice(stock.year_high);
            document.getElementById('yearLow').textContent = formatPrice(stock.year_low);
            
            const changeElem = document.getElementById('yearChange');
            changeElem.textContent = formatPercent(stock.year_change_pct);
            changeElem.className = `stat-value ${isPositive ? 'text-up' : 'text-down'}`;
        }

        // æ™‚é–“è¶³ãƒœã‚¿ãƒ³ã®ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
        document.querySelectorAll('.interval-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const newInterval = this.dataset.interval;

                // ãƒœã‚¿ãƒ³ã®çŠ¶æ…‹æ›´æ–°
                document.querySelectorAll('.interval-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // æ™‚é–“è¶³ã‚’æ›´æ–°
                currentInterval = newInterval;

                // ãƒãƒ£ãƒ¼ãƒˆã®æ™‚åˆ»è¡¨ç¤ºè¨­å®šã‚’æ›´æ–°
                updateChartTimeScale(newInterval);

                // ç¾åœ¨é¸æŠä¸­ã®éŠ˜æŸ„ãŒã‚ã‚Œã°å†èª­ã¿è¾¼ã¿
                if (currentTicker) {
                    await selectStock(currentTicker);
                } else {
                    // éŠ˜æŸ„ãƒªã‚¹ãƒˆå…¨ä½“ã‚’å†èª­ã¿è¾¼ã¿
                    await loadData();
                }
            });
        });

        // ãƒãƒ£ãƒ¼ãƒˆã®æ™‚åˆ»è¡¨ç¤ºè¨­å®šã‚’æ›´æ–°
        function updateChartTimeScale(interval) {
            const timeVisible = ['15m', '30m', '60m'].includes(interval);
            chart.applyOptions({
                timeScale: {
                    borderVisible: false,
                    timeVisible: timeVisible,
                    secondsVisible: false
                }
            });
        }

        initChart();
        loadData();
    </script>
</body>
